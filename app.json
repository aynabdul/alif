{
  "expo": {
    "name": "Alif Animal Farm",
    "slug": "alif-animal-farm",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/Logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#F5F5F5"
    },
    "plugins": [],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.alif.animalfarm",
      "splash": {
        "image": "./assets/Logo.png",
        "resizeMode": "contain",
        "backgroundColor": "#F5F5F5",
        "dark": {
          "image": "./assets/Logo.png",
          "resizeMode": "contain",
          "backgroundColor": "#F5F5F5"
        }
      },
      "requireFullScreen": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F5F5F5"
      },
      "package": "com.alif.animalfarm",
      "splash": {
        "image": "./assets/Logo.png",
        "resizeMode": "contain",
        "backgroundColor": "#F5F5F5",
        "mdpi": "./assets/splash-mdpi.png",
        "hdpi": "./assets/Logo.png",
        "xhdpi": "./assets/Logo.png",
        "xxhdpi": "./assets/Logo.png"
      },
      "softwareKeyboardLayoutMode": "pan",
      "navigationBar": {
        "hidden": true,
        "visible": "immersive"
      }
    },
    "androidStatusBar": {
      "hidden": false,
      "translucent": true,
      "backgroundColor": "#F5F5F5",
      "style": "dark"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "jsEngine": "hermes",
    "extraConfig": {
      "reactNativeSafeModule": {
        "ignoreWarnings": true
      },
      "react-native-render-html": {
        "enableExperimentalBRSupport": true,
        "enableExperimentalGhostLinesPrevention": true,
        "defaultProps": false
      }
    }
  }
}
